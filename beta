    display: block;
    margin-bottom: 5px;
}

.form-group input,
.form-group select {
    width: calc(100% - 10px);
    padding: 8px;
    border: 1px solid #555;
    border-radius: 5px;
    background-color: #333;
    color: white;
}

.submit-btn {
    width: 100%;
    padding: 10px;
    background-color: blue;
    border: none;
    color: white;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
}

.submit-btn:hover {
    background-color: darkblue;
}



document.getElementById("registration-form").addEventListener("submit", function (event) {
    event.preventDefault();
    alert("Inscription réussie !");
});




